{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "rootDir": ".",
    "outDir": "./dist/lib",
    // "declarationDir": "./dist/@types",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@utils/*": [ "./src/utils/*" ],
      "@/controller/*": [
        "./src/modules/BrandEntity/controller/*",
        "./src/modules/ModelEntity/controller/*",
        "./src/modules/VersionEntity/controller/*"
      ],
      "@repository/*": [ 
        "./src/modules/BrandEntity/repository/*",
        "./src/modules/ModelEntity/repository/*",
        "./src/modules/VersionEntity/repository/*"
      ],
      "@service/*": [ 
        "./src/modules/BrandEntity/service/*",
        "./src/modules/ModelEntity/service/*",
        "./src/modules/VersionEntity/service/*" 
      ]
    }
  },
  "include": ["src/**/*", "**/*.spec.ts"]
}